<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    >

    <ImageView
        android:id="@+id/movie_photo"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soul"
            android:textSize="30dp"
            android:fontFamily="@font/catamaran_bold"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <RatingBar
            android:id="@+id/movie_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:isIndicator="true"
            android:numStars="5"
            />

        <TextView
            android:id="@+id/movie_year_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USA | 2020 | animation, adventure"
            android:textSize="16dp"
            android:fontFamily="@font/catamaran_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/movie_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="After landing the gig of a lifetime, a New York jazz pianist suddenly finds himself trapped in a strange land between Earth and the afterlife."
            android:textSize="14dp"
            android:fontFamily="@font/catamaran_thin"
            android:textStyle="bold"
            android:textColor="@color/black"
            />


    </LinearLayout>



</LinearLayout>